{
  "name": "Pointmotion Recorder Assist",
  "description": "Pointmotion Recorder Assist to be used to upload your SoundHealth testing videos.",
  "author": "Point Motion",
  "version": "0.0.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://*.patient.dev.pointmotioncontrol.com/*",
        "*://www.youtube.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Point Motion",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs",
    "system.display",
    "desktopCapture",
    "offscreen",
    "webNavigation",
    "system.display",
    "system.storage",
    "system.cpu",
    "system.memory"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "externally_connectable": {
    "matches": ["*://*.patient.dev.pointmotioncontrol.com/*", "*://localhost/*", "*://www.youtube.com/*"]
  },
  "icons": {
    "16": "assets/white/sh_16.png",
    "48": "assets/white/sh_48.png",
    "128": "assets/white/sh_128.png"
  }
}
